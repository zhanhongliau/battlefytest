{
    "extends": "google",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true,
            "experimentalObjectRestSpread": true,
            "jsx": true
        }
    },
    "env": {
        "node": true,
        "browser": true
    },
    "plugins": [
        "react"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
        "comma-dangle" : 0,
        "no-console": 0,
        "no-unused-vars": "warn",
        "no-unexpected-multiline": "warn",
        "react/prop-types": "warn",
        "indent": ["error", 4, { "SwitchCase": 1, "VariableDeclarator": 1 }],
        "no-tabs": 1
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "0.14.8"
        }
    }
}
